<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Portal - Learnology</title>
    <link rel="stylesheet" href="/student.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="logo">
                <i class="fas fa-graduation-cap"></i>
                <span>LEARNOLOGY</span>
            </div>
            <div class="mobile-toggle" id="mobile-toggle">
                <i class="fas fa-bars"></i>
            </div>

            <!-- add links to side bar -->


            <ul class="sidebar-menu">
                <li class="active">
                    <a href="#"><i class="fas fa-th-large"></i> Dashboard</a>
                </li>
                <li>
                    <a href="/course-list"><i class="far fa-file-alt"></i> Courses</a>
                </li>
                <li>
                    <a href="/course-pre-registration"><i class="fas fa-clipboard-list"></i> Pre-Registration</a>
                </li>
                <li>
                    <a href="/pre-registered-courses"><i class="fas fa-clipboard-list"></i> Pre-Registered Courses</a>
                </li>
                <li>
                    <a href="#"><i class="fas fa-poll"></i> Results</a>
                </li>
                <li>
                    <a href="/course-registration  "><i class="fas fa-clipboard-list"></i> Course Registration</a>
                </li>
                <li>
                    <a href="/registered-courses  "><i class="fas fa-clipboard-list"></i> Registered Courses</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
         
        <div class="main-content">
            <!-- Header -->
            <div class="header">
                <div class="menu-toggle" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </div>
                <div class="search-bar">
                    <input type="text" placeholder="Search">
                    <button><i class="fas fa-search"></i></button>
                </div>
                <div class="user-info">
                    <div class="notifications">
                        <i class="far fa-bell"></i>
                    </div>
                    <div class="profile">
                        <img src="/asset/5856.jpg" alt="Profile">
                        <div class="profile-info">

                            <!--      # add argument from table that is student name -->

                            <span class="name"><%= name %></span>                       
                            <span class="role">Student</span>
                        </div>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="content">
                <!-- Welcome Section -->
                <div class="welcome-section">
                    <div class="welcome-info">
                        <img src="/asset/5856.jpg" alt="Profile">
                        <div>
                                            
                            <h2>Welcome, <%= name %></h2>                                         
                            <p><%= currDate %></p>                                 
                        </div>
                    </div>
                    <div class="points-meter">
                        <div class="meter-container">
                            <div class="meter">
                                <div class="gauge"></div>
                            </div>
                        </div>
                        <div class="points-info">

                            <!--  #add total credits -->

                            <p>My Total Points</p>
                            <h3><%= totalCredits %></h3>                                                     
                        </div>
                    </div>
                </div>



                <!-- # show current courses of this sem from table -->


                <!-- Progress Section -->
                <div class="section-row">
                    <div class="section progress-section">
                        <div class="section-header">
                            <h3>My Course Progress</h3>
                        </div>
                        <div class="progress-content">
                            <div class="overall-progress">
                                <div class="progress-circle">
                                    <svg viewBox="0 0 36 36">
                                        <path class="circle-bg"
                                              d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"/>
                                        <path class="circle"
                                              stroke-dasharray="<%= (totalCredits / 40) * 100 %>, 100"
                                              d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"/>
                                        <text x="18" y="20.35" class="percentage">
                                            <%= Math.round((totalCredits / 40) * 100) %>%
                                        </text>
                                    </svg>
                                    <p>IC Progress</p>
                                </div>
                            </div>
                            <div class="overall-progress">
                                <div class="progress-circle">
                                    <svg viewBox="0 0 36 36">
                                        <path class="circle-bg"
                                              d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"/>
                                        <path class="circle"
                                              stroke-dasharray="<%= (totalCredits / 160) * 100 %>, 100"
                                              d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"/>
                                        <text x="18" y="20.35" class="percentage">
                                            <%= Math.round((totalCredits / 160) * 100) %>%
                                        </text>
                                    </svg>
                                    <p>Overall Progress</p>
                                </div>
                            </div>
                            <div class="overall-progress">
                                <div class="progress-circle">
                                    <svg viewBox="0 0 36 36">
                                        <path class="circle-bg"
                                              d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"/>
                                        <path class="circle"
                                              stroke-dasharray="<%= (totalCredits / 160) * 100 %>, 100"
                                              d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"/>
                                        <text x="18" y="20.35" class="percentage">
                                            <%= Math.round((totalCredits / 100) * 100) %>%
                                        </text>
                                    </svg>
                                    <p>DC Progress</p>
                                </div>
                            </div>
                            
                              
                        </div>
                    </div>
                </div>
            <!-- Replace the existing course progress section with this -->
       <!-- Replace the existing course progress section -->
                <div class="sectio-row subject-progress bg-white rounded-xl shadow-lg p-6 mt-6">
                    <!-- Header Section -->
                    <div class="course-progress-header mb-4">
                        <h4 class="text-xl font-semibold text-blue-600 border-b pb-2">Current Courses</h4>
                        
                    </div>
                    
                    <!-- Content Section with flex-col -->
                    <div class="course-progress-content mt-4 flex flex-col">
                        <% 
                        const semesters = Object.keys(coursesBySemester); 
                        const lastSemester = semesters[semesters.length - 1]; 
                        if (lastSemester && coursesBySemester[lastSemester]) { 
                        %>
                            <ul class="list-disc pl-5 text-gray-800 space-y-3">
                                <% coursesBySemester[lastSemester].forEach(courseObj => { %>
                                    <li class="block w-full mb-2">
                                        <span class="font-medium block"><%= courseObj.course %> </span>
                                    </li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                            <p class="text-gray-500 italic">No courses available for the last semester.</p>
                        <% } %>
                    </div>
                </div>
                    
                    
                

                <div class="section-row">
                    <div class="section courses-section shadow-lg rounded-xl bg-white p-6">
                      <div class="section-header flex justify-between items-center border-b pb-2 mb-4">
                        <h3 class="text-xl font-semibold text-blue-600">Your Courses and Grades</h3>
                        <a href="#" class="text-blue-500 hover:text-blue-700 text-sm font-medium">View All</a>
                      </div>
                  
                      <div class="courses-content space-y-6">
                        
                  
                        <% for (let semester in coursesBySemester) { %>
                          <div class="semester-section">
                            <h3 class="text-blue-600 font-semibold text-md border-b border-blue-100 pb-1 mb-2">
                              <%= semester %>
                            </h3>
                            <ul class="pl-4 list-disc text-gray-700 space-y-1">
                              <% coursesBySemester[semester].forEach(courseObj => { %>
                                <li>
                                  <span class="font-medium"><%= courseObj.course %></span> - 
                                  Grade: <span class="font-semibold text-gray-900"><%= courseObj.grade %></span>
                                </li>
                              <% }) %>
                            </ul>
                          </div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                  

    <script>
        // Simple JavaScript for mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menu-toggle');
            const mobileToggle = document.getElementById('mobile-toggle');
            const sidebar = document.getElementById('sidebar');
            
            function toggleSidebar() {
                sidebar.classList.toggle('active');
            }
            
            if (menuToggle) {
                menuToggle.addEventListener('click', toggleSidebar);
            }
            
            if (mobileToggle) {
                mobileToggle.addEventListener('click', toggleSidebar);
            }
        });
    </script>
</body>
</html>