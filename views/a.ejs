<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Portal - Learnology</title>
    <link rel="stylesheet" href="/student.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="logo">
                <i class="fas fa-graduation-cap"></i>
                <span>LEARNOLOGY</span>
            </div>
            <div class="mobile-toggle" id="mobile-toggle">
                <i class="fas fa-bars"></i>
            </div>

            <!-- add links to side bar -->


            <ul class="sidebar-menu">
                <li class="active">
                    <a href="#"><i class="fas fa-th-large"></i> Dashboard</a>
                </li>
                <li>
                    <a href="#"><i class="far fa-calendar"></i> My Calendar</a>
                </li>
                <li>
                    <a href="#"><i class="far fa-file-alt"></i> Courses</a>
                </li>
                <li>
                    <a href="#"><i class="fas fa-clipboard-list"></i> Pre-Registration</a>
                </li>
                <li>
                    <a href="#"><i class="fas fa-poll"></i> Results</a>
                </li>
                <li>
                    <a href="#"><i class="fas fa-question-circle"></i> Help</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
         
        <div class="main-content">
            <!-- Header -->
            <div class="header">
                <div class="menu-toggle" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </div>
                <div class="search-bar">
                    <input type="text" placeholder="Search">
                    <button><i class="fas fa-search"></i></button>
                </div>
                <div class="user-info">
                    <div class="notifications">
                        <i class="far fa-bell"></i>
                    </div>
                    <div class="profile">
                        <img src="/asset/5856.jpg" alt="Profile">
                        <div class="profile-info">

                            <!--      # add argument from table that is student name -->

                            <span class="name"><%= name %></span>                       
                            <span class="role">Student</span>
                        </div>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="content">
                <!-- Welcome Section -->
                <div class="welcome-section">
                    <div class="welcome-info">
                        <img src="/asset/5856.jpg" alt="Profile">
                        <div>
                                                                                                <!--  #add student name
                                                                                                  #add current date -->

                            <h2>Welcome, <%= name %></h2>                                         
                            <p><%= currDate %></p>                                 
                        </div>
                    </div>
                    <div class="points-meter">
                        <div class="meter-container">
                            <div class="meter">
                                <div class="gauge"></div>
                            </div>
                        </div>
                        <div class="points-info">

                            <!--  #add total credits -->

                            <p>My Total Points</p>
                            <h3><%= totalCredits %></h3>                                                     
                        </div>
                    </div>
                </div>



                <!-- # show current courses of this sem from table -->


                <!-- Progress Section -->
                <div class="section-row">
                    <div class="section progress-section">
                        <div class="section-header">
                            <h3>My Course Progress</h3>
                        </div>
                        <div class="progress-content">
                            <div class="overall-progress">
                                <div class="progress-circle">
                                    <svg viewBox="0 0 36 36">
                                        <path class="circle-bg"
                                              d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"/>
                                        <path class="circle"
                                              stroke-dasharray="<%= (totalCredits / 160) * 100 %>, 100"
                                              d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"/>
                                        <text x="18" y="20.35" class="percentage">
                                            <%= Math.round((totalCredits / 160) * 100) %>%
                                        </text>
                                    </svg>
                                    <p>Overall Progress</p>
                                </div>
                            </div>
                            <div class="subject-progress bg-white rounded-xl shadow-lg p-6 mt-6">
                                <h4 class="text-xl font-semibold text-blue-600 mb-4 border-b pb-2">Course Progress</h4>
                              
                                <% 
                                  const semesters = Object.keys(coursesBySemester); 
                                  const lastSemester = semesters[semesters.length - 1]; 
                                  if (lastSemester && coursesBySemester[lastSemester]) { 
                                %>
                                  <ul class="list-disc pl-5 text-gray-800 space-y-2">
                                    <% coursesBySemester[lastSemester].forEach(courseObj => { %>
                                      <li>
                                        <span class="font-medium"><%= courseObj.course %></span>
                                      </li>
                                    <% }) %>
                                  </ul>
                                <% } else { %>
                                  <p class="text-gray-500 italic">No courses available for the last semester.</p>
                                <% } %>
                              </div>
                              
                        </div>
                    </div>
                </div>

                    <!-- Calendar Section -->
                    <div class="section calendar-section">
                        <div class="section-header">
                            <h3>My Calendar</h3>
                            <div class="section-actions">
                                <button class="btn-add"><i class="fas fa-plus"></i> Add</button>
                                <button class="btn-expand"><i class="fas fa-expand-alt"></i> Expand</button>
                            </div>
                        </div>
                        <div class="calendar-navigation">
                            <button class="btn-prev"><i class="fas fa-chevron-left"></i></button>
                            <button class="btn-next"><i class="fas fa-chevron-right"></i></button>
                        </div>
                        <div class="calendar">
                            <div class="weekdays">
                                <div>Mon</div>
                                <div>Tue</div>
                                <div>Wed</div>
                                <div>Thu</div>
                                <div>Fri</div>
                                <div>Sat</div>
                                <div>Sun</div>
                            </div>
                            <div class="days">
                                <div class="day prev-month">29</div>
                                <div class="day prev-month">30</div>
                                <div class="day prev-month">31</div>
                                <div class="day">1</div>
                                <div class="day">2</div>
                                <div class="day">3</div>
                                <div class="day">4</div>
                                <div class="day">5</div>
                                <div class="day event">
                                    6
                                    <span class="event-indicator">2 pending</span>
                                </div>
                                <div class="day">7</div>
                                <div class="day">8</div>
                                <div class="day">9</div>
                                <div class="day">10</div>
                                <div class="day">11</div>
                                <div class="day">12</div>
                                <div class="day">13</div>
                                <div class="day">14</div>
                                <div class="day">15</div>
                                <div class="day">16</div>
                                <div class="day event">
                                    17
                                    <span class="event-indicator">1 pending</span>
                                </div>
                                <div class="day">18</div>
                                <div class="day">19</div>
                                <div class="day">20</div>
                                <div class="day event">
                                    21
                                    <span class="event-indicator">1 pending</span>
                                </div>
                                <div class="day">22</div>
                                <div class="day">23</div>
                                <div class="day">24</div>
                                <div class="day">25</div>
                                <div class="day">26</div>
                                <div class="day">27</div>
                                <div class="day">28</div>
                                <div class="day">29</div>
                                <div class="day">30</div>
                                <div class="day next-month">1</div>
                                <div class="day next-month">2</div>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Semester wise Courses Section
                <div class="section-row">
                    <div class="section courses-section">
                        <div class="section-header">
                            <h3>My Current Courses</h3>
                            <a href="#" class="view-all">View All</a>
                        </div>
                        <div class="courses-content">
                            <h2>Your Courses and Grades</h2>

                            <% for (let semester in coursesBySemester) { %>
                              <h3>Semester <%= semester %></h3>
                              <ul>
                                <% coursesBySemester[semester].forEach(courseObj => { %>
                                  <li><strong><%= courseObj.course %></strong> - Grade: <%= courseObj.grade %></li>
                                <% }) %>
                              </ul>
                            <% } %>
                            
                        </div>
                    </div>
                </div> -->

                <div class="section-row">
                    <div class="section courses-section shadow-lg rounded-xl bg-white p-6">
                      <div class="section-header flex justify-between items-center border-b pb-2 mb-4">
                        <h3 class="text-xl font-semibold text-blue-600">Your Courses and Grades</h3>
                        <a href="#" class="text-blue-500 hover:text-blue-700 text-sm font-medium">View All</a>
                      </div>
                  
                      <div class="courses-content space-y-6">
                        
                  
                        <% for (let semester in coursesBySemester) { %>
                          <div class="semester-section">
                            <h3 class="text-blue-600 font-semibold text-md border-b border-blue-100 pb-1 mb-2">
                              Semester <%= semester %>
                            </h3>
                            <ul class="pl-4 list-disc text-gray-700 space-y-1">
                              <% coursesBySemester[semester].forEach(courseObj => { %>
                                <li>
                                  <span class="font-medium"><%= courseObj.course %></span> - 
                                  Grade: <span class="font-semibold text-gray-900"><%= courseObj.grade %></span>
                                </li>
                              <% }) %>
                            </ul>
                          </div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                  

    <script>
        // Simple JavaScript for mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menu-toggle');
            const mobileToggle = document.getElementById('mobile-toggle');
            const sidebar = document.getElementById('sidebar');
            
            function toggleSidebar() {
                sidebar.classList.toggle('active');
            }
            
            if (menuToggle) {
                menuToggle.addEventListener('click', toggleSidebar);
            }
            
            if (mobileToggle) {
                mobileToggle.addEventListener('click', toggleSidebar);
            }
        });
    </script>
</body>
</html>